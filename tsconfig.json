{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/components": ["./components/*"],
      "@/styles": ["./styles/*"],
      "@/assets": ["./assets/*"],
      "@/redux": ["./redux/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}